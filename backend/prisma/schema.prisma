generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

enum CompanyStatus {
  Ativa
  Inativa
}

enum WorkOrderStatus {
  Aberta
  Em_andamento
  Concluida
  Nao_realizada
  Reagendada
  Cancelada
}

enum WorkOrderPriority {
  Baixa
  Media
  Alta
}

enum CalendarEventType {
  Visita
  Treinamento
}

enum FiscalBatchType {
  Entrada
  Saida
}

enum FiscalFileRunStatus {
  Gerado
  Falhou
}

enum UserRole {
  Admin
  Colaborador
}

model User {
  id           String   @id @default(uuid())
  name         String   @unique
  email        String?  @unique
  passwordHash String
  role         UserRole @default(Colaborador)
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Company {
  id                        String               @id @default(uuid())
  name                      String
  cnpj                      String?
  contact                   String?
  phone                     String?
  generatesFiscalFiles      Boolean              @default(false)
  generatesFiscalProduction Boolean              @default(false)
  tipoContribuinte          String?
  ie                        String?
  razaoSocial               String?
  cep                       String?
  rua                       String?
  numero                    String?
  bairro                    String?
  cidade                    String?
  estado                    String?
  nomeFantasia              String?
  email                     String?
  contabilidadeNome         String?
  contabilidadeEmail        String?
  contabilidadeTelefone     String?
  status                    CompanyStatus        @default(Ativa)
  createdAt                 DateTime             @default(now())
  updatedAt                 DateTime             @updatedAt

  workOrders                WorkOrder[]
  fiscalFiles               FiscalFile[]
  fiscalFileRuns            FiscalFileRun[]
  fiscalBatches             FiscalBatch[]
  calendarEvents            CalendarEvent[]
}

model WorkOrder {
  id          String            @id @default(uuid())
  number      String
  companyId   String
  type        String
  responsible String
  dueDate     DateTime
  priority    WorkOrderPriority
  status      WorkOrderStatus
  description String?
  createdAt   DateTime          @default(now())

  company     Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  history     WorkOrderHistory[]

  @@index([companyId])
}

model WorkOrderHistory {
  id          String    @id @default(uuid())
  workOrderId String
  title       String
  description String?
  at          DateTime  @default(now())

  workOrder   WorkOrder @relation(fields: [workOrderId], references: [id], onDelete: Cascade)

  @@index([workOrderId])
}

model FiscalFile {
  id            String    @id @default(uuid())
  companyId     String
  responsible   String?
  observation   String?
  dayOfMonth    Int
  nextGeneration DateTime
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  company       Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

model FiscalFileRun {
  id           String              @id @default(uuid())
  companyId    String
  competence   String
  generatedAt  DateTime            @default(now())
  generatedBy  String
  notes        String?
  status       FiscalFileRunStatus @default(Gerado)

  company      Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

model FiscalBatch {
  id          String          @id @default(uuid())
  companyId   String
  competence  String
  type        FiscalBatchType
  quantity    Int
  notes       String?
  launchDone  Boolean         @default(false)
  billingDone Boolean         @default(false)
  createdBy   String?
  createdAt   DateTime        @default(now())

  company     Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

model CalendarEvent {
  id          String            @id @default(uuid())
  type        CalendarEventType
  companyId   String
  date        DateTime
  time        String
  location    String
  responsible String
  notes       String?

  company     Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

model SystemLog {
  id        String   @id @default(uuid())
  type      String
  message   String
  createdAt DateTime @default(now())
}
